<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>


<?import javafx.scene.control.Button?>
<BorderPane fx:controller="com.example.listas.DetailController" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <ImageView fx:id="imagen" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER"/>
    </left>
    <right>
        <Button fx:id="botonContestar" text="Contestar"></Button>
    </right>
    <top>
        <Label fx:id="labelTitulo" text="Algo de la nueva ventana" BorderPane.alignment="CENTER"/>
    </top>
    <bottom>
        <Label fx:id="labelPopularidad" BorderPane.alignment="CENTER"/>
    </bottom>
    <center>
        <Label fx:id="labelDescripcion" BorderPane.alignment="CENTER"/>
    </center>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</BorderPane>
